<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ViewResources" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_light</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/secondary_light</item>
        <item name="cart_item_style">@style/cart_item</item>
    </style>

    <style name="Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Button.Outline" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
        <item name="strokeColor">@color/outline_light</item>
    </style>

    <style name="Button.Outline.Secondary">
        <item name="android:textColor">@color/secondary_light</item>
    </style>

</resources>